color_t c(255, 255, 255);
pen_t pen(c, 12.0);
line_t l(500, 200, 600, 100, pen);
l.draw();

---

point_t p0(100, 100);
point_t p1(200, 200);
point_t p2(300, 150);

list<point_t> points;
points.push_back(p0);
points.push_back(p1);
points.push_back(p2);

color_t white(255, 255, 255);
polygon_t poly(points, white);
poly.draw();

---

